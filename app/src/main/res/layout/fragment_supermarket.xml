<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Supermarket">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/find_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_corner_btn"
                android:drawableLeft="@drawable/zoom"
                android:onClick="Find"
                android:text="Buscar"
                android:textColor="@color/primary_light"
                android:textSize="24sp" />

            <Button
                android:id="@+id/store_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_corner_btn"
                android:drawableLeft="@drawable/add_package"
                android:onClick="Store"
                android:text="Alta"
                android:textColor="@color/primary_light"
                android:textSize="24sp" />

            <Button
                android:id="@+id/change_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_corner_btn"
                android:drawableLeft="@drawable/baggage_cart_box"
                android:onClick="ChangeLocal"
                android:text="Cambio de Local"
                android:textColor="@color/primary_light"
                android:textSize="24sp" />

            <Button
                android:id="@+id/open_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_corner_btn"
                android:drawableLeft="@drawable/box_front_open"
                android:onClick="Open"
                android:text="Abrir"
                android:textColor="@color/primary_light"
                android:textSize="24sp" />

            <Button
                android:id="@+id/linkandopen_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_corner_btn"
                android:drawableLeft="@drawable/link"
                android:onClick="LinkAndOpen"
                android:text="Abrir y Enlazar"
                android:textColor="@color/primary_light"
                android:textSize="24sp" />

            <Button
                android:id="@+id/empty_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_corner_btn"
                android:drawableLeft="@drawable/box_open"
                android:onClick="Empty"
                android:text="Vacio"
                android:textColor="@color/primary_light"
                android:textSize="24sp" />

            <Button
                android:id="@+id/audit_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_corner_btn"
                android:drawableLeft="@drawable/weighing_mashine"
                android:onClick="Audit"
                android:text="Auditar Servicio"
                android:textColor="@color/primary_light"
                android:textSize="24sp" />

            <Button
                android:id="@+id/scan_audit_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_corner_btn"
                android:drawableLeft="@drawable/barcode"
                android:onClick="ScanAudit"
                android:text="Auditar Reserva"
                android:textColor="@color/primary_light"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>