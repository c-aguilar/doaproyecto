<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:focusable="false">
    <TextView
        android:id="@+id/serial_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:shadowColor="#909090"
        android:textColor="#000"
        android:textSize="20dp"
        android:text="0FV38900123456"/>

    <TextView
        android:id="@+id/status_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/serial_lbl"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="14dp"
        android:text="RESERVA"
        android:paddingRight="90dp"/>
    <TextView
        android:id="@+id/quantity_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/serial_lbl"
        android:layout_alignParentRight="true"
        android:textColor="#0054b4"
        android:textSize="18dp"
        android:text="100 PC"/>
    <TextView
        android:id="@+id/location_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/status_lbl"
        android:layout_alignParentRight="true"
        android:textColor="#888888"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="00000000"/>
</android.widget.RelativeLayout>