<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:focusable="false">
    <TextView
        android:id="@+id/partnumber_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:shadowColor="#909090"
        android:textColor="#000"
        android:textSize="20dp"
        android:text="12345678"/>

    <TextView
        android:id="@+id/description_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/partnumber_lbl"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="14dp"
        android:text="MATERIAL DESCRIPTION"
        android:paddingRight="90dp"/>
    <TextView
        android:id="@+id/kanban_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/partnumber_lbl"
        android:layout_alignParentRight="true"
        android:textColor="#0054b4"
        android:textSize="18dp"
        android:text="S0000000"/>
    <TextView
        android:id="@+id/location_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/description_lbl"
        android:layout_alignParentRight="true"
        android:textColor="#888888"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="00000000"/>
</android.widget.RelativeLayout>